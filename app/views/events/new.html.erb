<div class = "container-fluid event-index">
  <div class = "row new-event">
    <div class=" co-lg-6 col-md-6 col-sm-6 col-xs-12 col-lg-offset-5 col-md-offset-5 col-sm-offset-3">
      <h1 class = "form-title">Create your new event</h1>
      <%= form_for @event do |f| %>
        <div class = "form-label">
          <%= f.label :title, :Name, class: "form-label" %>
          <%= f.text_field :title, class: "form-input", placeholder: "Event Name" %>
          <span class = "help-block" id = "hint_name">
            Tên sự kiện không dài quá 30 ký tự
          </span>
        </div>

        <div class = "form-label">
          <label class="form-label">
            Location <span class="asteriskField">*</span>
          </label>
          <%= f.collection_check_boxes :city_ids, City.all, :id, :city_name do |t| %>
            <div class = "checkbox">
              <%= t.check_box%>
              <%= t.label %>
            </div>
          <% end %>
          <span class="help-block" id="hint_select1">
            Chọn nơi tổ chức sự kiện
          </span>
        </div>

        <div class="form-label">
          <label class="form-label">
            Category <span class="asteriskField">*</span>
          </label>
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
            <div class = "checkbox">
              <%= b.check_box %>
              <%= b.label %>
            </div>
          <% end %>
          <span class="help-block" id="hint_checkbox">
            Chọn lĩnh vực của sự kiện
          </span>
        </div>

        <div class="form-label">
          <%= f.label :date_start, :Start, class: "control-label requiredField" %>
          <%= f.date_field :date_start, class: "form-input" %>
          <span class="help-block" id="hint_date">
            Ngày bắt đầu sự kiện
          </span>
        </div>

        <div class="form-label">
          <%= f.label :date_end, :End, class: "control-label requiredField" %>
          <%= f.date_field :date_end, class: "form-input" %>
          <span class="help-block" id="hint_date1">
            Ngày kết thúc sự kiện
          </span>
        </div>

        <div class="form-label">
          <%= f.label :content, :Description, class: "control-label" %>
          <%= f.text_area :content, class: "form-control", cols: "40", rows: "10",
            placeholder: "Mô tả chi tiết sự kiện" %>
          <span class="help-block" id="hint_message">
            Mô tả chi tiết sự kiện
          </span>
        </div>

        <div class="form-label">
          <div>
            <%= f.submit "Submit", class: "W2Gbutton" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
