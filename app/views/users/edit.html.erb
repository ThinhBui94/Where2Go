<% provide :title, t(".page_name") %>
<div class = "edit-form">
  <h1 class = "text-center"><%= t".heading" %></h1>
  <div class="ro444444w">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user do |f| %>
        <%= render "shared/error_messages" %>

        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>

        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-input"  %>

        <%= f.label :phone, class: "form-label" %>
        <%= f.text_field :phone, class: "form-input"  %>

        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-input"  %>

        <%= f.label :password_confirmation, class: "form-label"%>
        <%= f.password_field :password_confirmation, class: "form-input"  %>

        <%= f.label :category, class: "form-label" %>
          <%= f.collection_check_boxes :category_ids, @categories, :id, :name do |t| %>
          <div class = "checkbox form-label">
            <%= t.check_box %>
            <%= t.label %>
          </div>
        <% end %>

        <%= f.submit t(".save_changes"), class: "W2Gbutton" %>
      <% end %>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails" target="_blank"><%= t".change" %></a>
      </div>
    </div>
  </div>
</div>
