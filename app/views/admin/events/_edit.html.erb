 <div class="container-fluid">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3 modal-content">
      <h1 class="form-title"><%= t ".heading" %></h1>
      <%= form_for [:admin, @event], remote: true do |f| %>
        <div class="row">
          <div class="form-label col-lg-4">
            <%= f.label :title, :Name, class: "form-label" %>
            <%= f.text_field :title, class: "form-input", placeholder: t(".event_name") %>
          </div>

          <div class="form-label col-lg-4">
            <%= f.label :date_start, t(".start"), class: "control-label requiredField" %>
            <%= f.date_field :date_start, class: "form-input" %>
          </div>

          <div class="form-label col-lg-4">
            <%= f.label :date_end, t(".end"), class: "control-label requiredField" %>
            <%= f.date_field :date_end, class: "form-input" %>
          </div>
        </div>

        <div class="row">
          <div class="form-label col-lg-4">
            <label class="form-label">
              <%= t ".category" %> <span class="asteriskField">*</span>
            </label>
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
              <div class="checkbox">
                <%= b.check_box %>
                <%= b.label %>
              </div>
            <% end %>
          </div>

          <div class="form-label col-lg-4">
            <label class="form-label">
              <%= t ".location" %> <span class="asteriskField">*</span>
            </label>
            <%= f.collection_check_boxes :city_ids, City.all, :id, :city_name do |t| %>
              <div class="checkbox">
                <%= t.check_box%>
                <%= t.label %>
              </div>
            <% end %>
          </div>

          <div class="form-label col-lg-4">
            <%= f.label :address, t(".address_label"), class: "form-label anchor", id: "form-address" %>
            <%= f.text_field :address, class: "form-input", placeholder: t(".address_holder") %>
          </div>
        </div>

        <div class="row">
          <div class="form-label col-lg-8">
            <%= f.label :content, t(".des"), class: "control-label" %>
            <%= f.text_area :content, id: "markdown", class: "form-control", cols: "40", rows: "10",
              placeholder: t(".event_des") %>
          </div>
          <hr>
          <div class="form-label col-lg-4">
            <div class="form-label image-upload row btn-admin-1">
              <%= f.label :picture, t(".upload"), class: "control-label file-input" %>
              <%= f.file_field :picture %>
            </div>
            <div class="row btn-admin-2">
              <div class="col-lg-6">
                <input type="button" class="btn btn-danger" data-dismiss="modal" value="Close">
              </div>
              <div class="col-lg-6">
                <%= f.submit "Save", class: "btn btn-info" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
