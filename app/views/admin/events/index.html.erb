<div class="page-wrapper">
  <div class="container-fluid inner-panel">
    <h2>Event management</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Event Name</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Creator</th>
          <th>Status</th>
          <th>Action</th>
          <th>Open</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @event.each do |event| %>
          <tr id="event_<%= event.id %>">
            <td><%= event.id %></td>
            <td class="event_title" id="event_name_<%= event.id %>">
              <%= event.title %>
            </td>
            <td id="event_date_start_<%= event.id %>"><%= event.date_start.strftime("%d/%m/%Y") %></td>
            <td id="event_date_end_<%= event.id %>"><%= event.date_end.strftime("%d/%m/%Y") %></td>
            <td id="event_created_at_<%= event.id %>"><%= event.created_at.strftime("%H:%M:%S %d/%m/%Y") %></td>
            <td id="event_updated_at_<%= event.id %>"><%= event.updated_at.strftime("%H:%M:%S %d/%m/%Y") %></td>
            <td id="event_owner_<%= event.id %>"><%= event.user.name %></td>
            <td>
              <label class="switch">
                <input type="checkbox">
                <span class="slider round"></span>
              </label>
            </td>
            <td>
              <%= link_to edit_admin_event_path(event),
                class: "btn btn-info", data: {toggle: "modal", target: "#edit-event", remote: true} do %>
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i> EDIT
              <% end %>
            </td>
            <td>
              <%= link_to event_path(event), class: "btn btn-success" do %>
                <i class="fa fa-external-link" aria-hidden="true"></i>
              <% end %>
            </td>
            <td>
              <%= link_to admin_event_path(event), method: :delete, class: "btn btn-danger" do %>
                <i class="fa fa-trash-o" aria-hidden="true"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="modal fade" id="edit-event" role="dialog">
    </div>
</div>
