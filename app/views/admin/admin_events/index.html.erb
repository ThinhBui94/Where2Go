<div id="page-wrapper">
  <div class="container-fluid">
  <h2>Event management</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Event Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Creator</th>
        <th>Status</th>
        <th>Action</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @event.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td class="event_title"><%= event.title %></td>
          <td><%= event.date_start.strftime("%d/%m/%Y") %></td>
          <td><%= event.date_end.strftime("%d/%m/%Y") %></td>
          <td><%= event.created_at.strftime("%H:%M:%S %d/%m/%Y") %></td>
          <td><%= event.updated_at.strftime("%H:%M:%S %d/%m/%Y") %></td>
          <td><%= event.user.name %></td>
          <td>
            <label class="switch">
              <input type="checkbox">
              <span class="slider round"></span>
            </label>
          </td>
          <td>
            <%= link_to "#", class: "btn btn-info" do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i> EDIT
            <% end %>
          </td>
          <td>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#edit-event">
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="modal fade" id="edit-event" role="dialog">

  </div>

  <div class="modal fade" id="delete-event" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
