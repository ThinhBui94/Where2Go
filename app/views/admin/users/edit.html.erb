<% provide :title, t(".page_name") %>
<div class = "edit-role-form">
  <h1 class = "text-center"><%= t".heading" %><%= @user.name %></h1>
  <div class="ro444444w">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for [:admin, @user] do |f| %>

        <div class="field select-box">
          <%= f.label :role, class: "form-label" %>
          <%= f.select :role, ["normal", "creator", "admin"], {}, 
            {class: "form-input"} %>
        </div>

        <%= f.submit t(".save_changes"), class: "W2Gbutton" %>
      <% end %>
    </div>
  </div>
</div>
